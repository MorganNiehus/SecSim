package martian;

public abstract class Martian {
	
	private int id;
	private int vol = 1;
	
	public Martian(int id){
		this.id = id;
	}

	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}

	public int getVol() {
		return vol;
	}

	public void setVol(int vol) {
		this.vol = vol;
	}
	
	public boolean equals(Object o){
		Martian m = (Martian)o;
		
		if(this.id == getId()){
			return true;
		}
		else
			return false;
	}
	
	public String toString(){
		String result = "";
		result = "id: " + id + "volume: " + vol;
		return result;
	}
	
	public abstract String speak();
	
	
	
	
	
}
